<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/LinearLayout02" android:paddingBottom="10.0px" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@id/TextView01" android:paddingLeft="5.0px" android:paddingRight="5.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Set a timer to stop the currently playing music, this is useful if you like to go to sleep listening to your music collection." />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/LinearLayout04" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@id/TextView02" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Hours" android:layout_weight="1.0" />
        <TextView android:gravity="center" android:id="@id/TextView03" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Minutes" android:layout_weight="1.0" />
        <TextView android:gravity="center" android:id="@id/TextView04" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Seconds" android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.andrewwilson.carmusic.NumberPicker android:orientation="vertical" android:id="@id/pickerHours" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="5.0" />
        <com.andrewwilson.carmusic.NumberPicker android:orientation="vertical" android:id="@id/pickerMinutes" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="5.0" />
        <com.andrewwilson.carmusic.NumberPicker android:orientation="vertical" android:id="@id/pickerSeconds" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="5.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/LinearLayout05" android:padding="10.0px" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:gravity="right" android:id="@id/TextView05" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Time remaining: " android:layout_weight="1.0" />
        <TextView android:gravity="left" android:id="@id/txtTimeRemaining" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Timer not set." android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/LinearLayout03" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/btnClose" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Close" android:layout_weight="1.0" />
        <Button android:id="@id/btnCancel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Kill Timer" android:layout_weight="1.0" />
        <Button android:id="@id/btnSet" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Set timer" android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>